//Run Time: 0ms - 100.00%
//Memory Usage: 6.3MB - 5.18%
//Solved =)
//Time O(n) Memory O(1)
class Solution {
public:
    string toLowerCase(string str) {
        //Loop through and turn a bit on
        for(int i = 0; i < str.size(); ++i) {
            str[i] |= 32;
        }
        return str;
    }
};
